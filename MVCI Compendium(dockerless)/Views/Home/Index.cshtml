@model MVCI_Compendium.Models.Character[]

@{
    ViewData["Title"] = "Home Page";
}


    

    <div class="characters">
    <div class="row row-border">
        <div class="faction-btn">
            <button id="capcom-btn">Capcom</button>
            <button id="marvel-btn">Marvel</button>
        </div>
            @foreach (var character in Model)
            {
                @if (character.Faction == "capcom")
                {
                    <div class="col-xs-4 capcom-characters">
                        <div class="charTitle">
                            @character.Name
                        </div>
                        <a href="@Url.Action("Detail", new { id = character.Id })">
                            <div class="center-block">
                                <img src="/images/@character.Icon"
                                     class="img-responsive img-thumbnail icon" />
                            </div>
                        </a>

                    </div>
                }
                else
                {
                    <div class="col-xs-4 marvel-characters">
                        <div class="icon-text-align">
                            <p class="charTitle">
                                @character.Name
                            </p>
                        </div>
                            <a href="@Url.Action("Detail", new { id = character.Id })">
                                <div class="center-block">
                                    <img src="/images/@character.Icon"
                                         class="img-responsive img-thumbnail icon" />

                                </div>
                            </a>
                        
                    </div>
                }
            }
    </div>
</div>

